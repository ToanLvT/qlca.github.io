@using Quanlicaan.Models.Session
@{
    ViewBag.Title = "Danh sách phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var per = (userSession)Session["user"];

    var message = ViewData["message"] ?? string.Empty;
    if (@message != "")
    {
        <script> alert('@message');</script>
    }
}
@if (per.IDRole == 1)
{
    <a href="@Url.Action("Create","PhongBan")">Thêm mới</a>
}

<table class="table tab-content table-bordered table-striped">
    <tr style="text-align:center">
        <th>ID</th>
        <th>Tên Phòng Ban</th>


        <th></th>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][0]</td>
            <td>@Model.Rows[i][1]</td>


            <td>
                @if (per.IDRole == 1)
                {
                    <a href="@Url.Action("Edit", "PhongBan", new { @id = Model.Rows[i][0] })">Sửa</a>@*<br />
                        <a href="@Url.Action("Delete","PhongBan", new {@id = Model.Rows[i][0]})">Delete</a>*@

                }
                else
                {
                    @*<a href="@Url.Action("Edit", "PhongBan", new { @id = Model.Rows[i][0] })">Edit</a>*@
                }
            </td>
        </tr>
    }
</table>


