@model Quanlicaan.Models.NhanVienModel
@{
    ViewBag.Title = "Update_Record";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update nhân viên</h2>
@{
    foreach (System.Data.DataRow dr in ViewBag.NhanVienRecord.Rows)
    {
        using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-control">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
               
                <label class="form-label"> Họ và tên</label>
                <div class="col-md-10">
                    <input class="form-control" type="text" name="hoTen" value="@dr["hoTen"]" />

                    @* @Html.EditorFor(model => model.hoTen, new { htmlAttributes = new { @class = "form-control", @value = @dr["hoTen"] } })*@
                    @Html.ValidationMessageFor(model => model.hoTen, "", new { @class = "text-danger" })
                </div>
            </div>  
            <div class="form-group" id="idphongban">
                
                <label class="form-label">ID Phòng Ban</label>
                <div class="col-md-10" id="colpb">
                    <input class="form-control" type="text" name="IDPhongBan" value="@dr["IDPhongBan"]" />
                    @* @Html.EditorFor(model => model.IDPhongBan, new { htmlAttributes = new { @class = "form-control", @value = @dr["IDPhongBan"], placeholder = @dr["IDPhongBan"] } })*@
                    @Html.ValidationMessageFor(model => model.IDPhongBan, "1: Kế toán | 2: Dân sự | 3: Kỹ thuật", new { @class = "text-danger" })

                </div>
            </div>
                <div class="form-group">
                    <label class="form-label">Tên đăng nhập</label>
                    <div class="col-md-10">
                        <input class="form-control" type="text" name="username" value="@dr["username"]" />
                       @* @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @value = @dr["username"], placeholder = @dr["username"] } })*@
                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Mật khẩu</label>
                    
                    <div class="col-md-10">
                        <input class="form-control" type="text" name="password" value="@dr["upassword"]" />
                        @*@Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @value = @dr["upassword"], placeholder = @dr["upassword"] } })*@
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group" id="trangthai">
                    <label class="form-label">Trạng thái</label>
                    
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label>active</label>
                            <input type="checkbox" name="trangThai" value="true" />

                            @* @Html.EditorFor(model => model.trangThai)*@
                            @Html.ValidationMessageFor(model => model.trangThai, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group" id="role">
                    <label class="form-label">Quyền quản trị hệ thống</label>
                    
                    <div class="col-md-10" id="colrole">
                        <input class="form-control" type="text" name="IDRole" value="@dr["IDRole"]" />
                        @* @Html.EditorFor(model => model.IDRole, new { htmlAttributes = new { @class = "form-control", @value = @dr["IDRole"], placeholder = @dr["IDRole"] } })*@
                        @Html.ValidationMessageFor(model => model.IDRole, "1: Admin | 2: User", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label"> Quyền đăng ký</label>
                   
                    <div class="col-md-10">
                        <input class="form-control" type="text" name="quyen" value="@dr["quyen"]" />
                        @*  @Html.EditorFor(model => model.quyen, new { htmlAttributes = new { @class = "form-control", @value = @dr["quyen"], placeholder = @dr["quyen"] } })*@
                        @Html.ValidationMessageFor(model => model.quyen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="btn-bottom" style="padding: 20px 12px">
                        <div class="">
                            <input type="submit" class="btn btn-outline-success"  value="Lưu thay đổi" class="btn" />
                        </div>

                        <div>
                            <a href="~/NhanVien/Show" class="btn btn-outline-danger">Quay lại</a>
                        </div>
                    </div>
                </div>
                @{ if (TempData["msg2"] != null)
                    {
                        <script>alert('@TempData["msg2"]')</script>
                    }
                }
            </div>
        }
    }

}


