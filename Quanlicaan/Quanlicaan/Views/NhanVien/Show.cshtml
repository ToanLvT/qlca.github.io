

@{
    ViewBag.Title = "Danh sách nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link href="~/css/nv.css" rel="stylesheet" />
}

<h2 style="text-align:center">Danh sách nhân viên</h2>


<div><a href="~/NhanVien/Add_Record" class="btn btn-danger">Add</a></div>
<table class="table-bordered container">
    <tr class="header">
        <th>ID</th>
        <th>Họ và tên</th>
        <th>ID phòng ban</th>
        <th>Tên đăng nhập</th>
        <th>Mật khẩu</th>
        <th>Quyền trên hệ thống</th>
        <th>Quyền đăng ký ca ăn</th>
        <th>Trạng thái tài khoản</th>
        <th>Actions</th>
    </tr>

    @foreach (System.Data.DataRow item in ViewBag.nv.Rows)
    {
        <tr>
            <td> @item["ID"] </td>
            <td> @item["hoTen"] </td>
            <td> @item["IDPhongBan"] </td>
            <td> @item["username"] </td>
            <td> @item["upassword"] </td>
            <td> @item["IDRole"] </td>
            <td> @item["quyen"] </td>
            <td> @item["trangThai"] </td>
            <td>

                <a href="~/NhanVien/Delete_Record?ID=@item["ID"]" class="btn btn-danger">Delete</a>
                <a href="~/NhanVien/Update_Record?ID=@item["ID"]" class="btn btn-warning">Update</a>

            </td>



        </tr>
    }

</table>

